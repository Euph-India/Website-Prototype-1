</main>

<script>
  var customAnimation = () => {
    var element = document.getElementById("latest")
    // flicker
    element.style.opacity = 0;
    setTimeout(() => {
      element.style.opacity = 1;  
      setTimeout(() => {
        element.style.opacity = 0;   
        setTimeout(() => {
          element.style.opacity = 1;
        }, 200);
      }, 200);
    }, 200);
  }
</script>

